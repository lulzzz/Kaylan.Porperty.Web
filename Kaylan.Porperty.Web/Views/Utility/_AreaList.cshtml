@model PagedList.IPagedList<Kalyan.Property.Infrastructure.Models.Area>
@using PagedList.Mvc;
<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Area Name</td>
            <td>City Name</td>
            <td>State Name</td>
            <td>Country Name</td>
            <td>IsActive</td>
        </tr>
    </thead>

    <tbody>

        @foreach (var area in Model)
        {
            <tr>
                <td>@area.Id</td>
                <td>@area.Name</td>
                <td>@area.City.Name </td>
                <td>@area.City.State.Name </td>
                <td>@area.City.State.Country.Name </td>
                <td>@area.IsActive</td>
            </tr>
        }
    </tbody>
</table>

<div id="contentPager">

    @Html.PagedListPager(Model, page => Url.Action("CreateArea", new { page }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "unobtrusive" }))
</div>